---
const { links } = Astro.props; // expects an array of objects: [{ text: string, href: string | null }]
---
<nav aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-muted-foreground">
    {links.map((link, index) => (
      <li class="flex items-center space-x-2">
        {index > 0 && (
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        )}
        {link.href ? (
          <a href={link.href} class="hover:text-foreground transition-colors">{link.text}</a>
        ) : (
          <span class="font-medium text-foreground">{link.text}</span>
        )}
      </li>
    ))}
  </ol>
</nav>