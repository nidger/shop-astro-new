---
import { Image } from 'astro:assets';
const { collections } = Astro.props;
---
<section class="px-6 py-8">
  <h2 class="text-xl font-bold text-foreground mb-6">Shop by collection</h2>
  
  <div class="grid grid-cols-3 gap-4">
    {collections.map((collection) => (
      <a href={`/collection/${collection.id}`}>
        <div class="text-center">
          <div class="aspect-square bg-card rounded-lg p-4 mb-3 overflow-hidden hover:bg-card-hover transition-colors cursor-pointer">
            <Image 
              src={collection.image} 
              alt={collection.title}
              widths={[200, 400, 800]}
              sizes="(max-width: 768px) 200px, 400px"
              format="webp"
              class="w-full h-full object-cover rounded"
            />
          </div>
          <h3 class="text-sm font-bold text-foreground">{collection.title}</h3>
        </div>
      </a>
    ))}
  </div>
</section>