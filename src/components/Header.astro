---
import ShoppingCartButton from './ShoppingCartButton.tsx';
import { DesktopNavigation } from './DesktopNavigation.tsx';
import { MobileNavigation } from './MobileNavigation.tsx';
---
<header class="flex items-center justify-between px-6 py-4 bg-background">
  <!-- Left: Logo -->
  <div class="flex-1">
    <a href="/" aria-label="AstroMART Homepage" class="inline-block">
      <div class="text-2xl font-bold text-foreground">
        <span class="text-primary">A</span>stro<span class="text-primary">MART</span>
      </div>
    </a>
  </div>

  <!-- Center: Desktop Navigation (Desktop only) -->
  <div class="hidden md:flex justify-center">
    <DesktopNavigation client:load />
  </div>

  <!-- Right: Actions -->
  <div class="flex-1 flex justify-end items-center gap-2">
    <ShoppingCartButton client:load />
    <div class="md:hidden">
      <MobileNavigation client:load />
    </div>
  </div>
</header>