---
import { Button } from "@/components/ui/button";
import heroImage from '../assets/garden_bench_looking_into_lovely_garden_with_path.jpg';
---
<section class="relative px-6 pt-56 pb-16 text-center overflow-hidden">
  <!-- Hero Image -->
  <img
    src={heroImage.src}
    alt="Garden bench looking into a lovely garden with a path"
    width={heroImage.width}
    height={heroImage.height}
    class="absolute inset-0 w-full h-full object-cover"
  />

  <div class="relative z-10 pt-16">
    <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
      Time to suit up, Astronaut.
    </h1>

    <a href="#summer-products">
      <Button className="bg-white text-black hover:bg-gray-100 px-8 py-2 rounded-full font-medium">
        Shop now
      </Button>
    </a>
  </div>
</section>