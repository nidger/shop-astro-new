---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { collections } from '../data/products.ts';

// Define the links for the breadcrumb component
const breadcrumbLinks = [
  { text: 'Home', href: '/' },
  { text: 'Collections', href: null } // Current page
];
---
<Layout>
  <main class="px-6 py-8">
    <div class="mb-8">
      <Breadcrumb links={breadcrumbLinks} />
    </div>
    <h1 class="text-4xl font-bold">Collections</h1>
    <p class="text-muted-foreground mt-1 mb-8">{collections.length} collections</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {collections.map((collection) => (
        <a href={`/collection/${collection.id}`}>
          <div class="text-center">
            <div class="aspect-square bg-card rounded-lg p-4 mb-3 overflow-hidden hover:bg-card-hover transition-colors cursor-pointer">
              <img 
                src={collection.image.src} 
                alt={collection.title}
                width={collection.image.width}
                height={collection.image.height}
                class="w-full h-full object-cover rounded"
              />
            </div>
            <h3 class="text-sm font-bold text-foreground">{collection.title}</h3>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>